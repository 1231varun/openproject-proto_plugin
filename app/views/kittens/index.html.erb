<% html_title("Kittens") %>

<h1>Kittens</h1>

<p>
  There's these kittens:
</p>

<ul ng-controller="KittensController as kittens">
  <% @kittens.each do |kitten| %>
    <li ng-click="showMessage()"><%= kitten %></li>
  <% end %>
</ul>

<div style="position: absolute; bottom: 20px; right: 0px;">
  <%= image_tag 'kitty.png', width: 320, height: 200 %>
</div>
